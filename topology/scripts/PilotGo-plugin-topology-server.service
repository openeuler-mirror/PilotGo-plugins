[Unit]
Description=PilotGo plugin topology server
Requires=network-online.target
After=network-online.target

[Service]
Type=simple
Restart=always
RestartSec=3s
ExecStart=/usr/bin/PilotGo-plugin-topology-server --config.file=/etc/PilotGo/plugin/topology/server/config_sever.yaml

[Install]
WantedBy=multi-user.target
