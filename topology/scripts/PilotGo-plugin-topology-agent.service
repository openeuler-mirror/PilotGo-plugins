[Unit]
Description=PilotGo plugin topology agent
Requires=network-online.target
After=network-online.target

[Service]
Type=simple
Restart=always
RestartSec=3s
WorkingDirectory=/opt/PilotGo/plugin/topology/agent
ExecStart=/opt/PilotGo/plugin/topology/agent/PilotGo-plugin-topology-agent --config.file=/opt/PilotGo/plugin/topology/agent/config_agent.yaml

[Install]
WantedBy=multi-user.target
