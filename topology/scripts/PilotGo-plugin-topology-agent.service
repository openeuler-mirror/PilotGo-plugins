[Unit]
Description=PilotGo plugin topology agent
Requires=network-online.target
After=network-online.target

[Service]
Type=simple
Restart=always
RestartSec=3s
ExecStart=/usr/bin/PilotGo-plugin-topology-agent --config.file=/etc/PilotGo/plugin/topology/agent/config_agent.yaml

[Install]
WantedBy=multi-user.target
